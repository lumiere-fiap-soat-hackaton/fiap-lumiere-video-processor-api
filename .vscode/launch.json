{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug NestJS with Hot Reload",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/@nestjs/cli/bin/nest.js",
      "args": [
        "start",
        "--debug",
        "--watch"
      ],
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "development"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "sourceMaps": true,
      "restart": true,
      "protocol": "inspector",
      "envFile": "${workspaceFolder}/.env"
    }
  ]
}
