{
  "name": "fiap-lumiere-video-processor-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "dev:db:setup": "ts-node -r tsconfig-paths/register scripts/setup-dev-db.ts",
    "dev:sqs:setup": "ts-node -r tsconfig-paths/register scripts/setup-sqs-queues.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    
    "dev:setup": "npm run docker:up && timeout 5 && npm run dev:sqs:setup && npm run dev:db:setup",
    
    "sqs:list": "aws --endpoint-url=http://localhost:9324 sqs list-queues --region us-east-1",
    
    "sqs:purge:all": "ts-node -r tsconfig-paths/register scripts/purge-all-queues.ts",
    "sqs:delete:all": "ts-node -r tsconfig-paths/register scripts/delete-all-queues.ts",
    
    "sqs:receive:events": "aws --endpoint-url=http://localhost:9324 sqs receive-message --queue-url http://localhost:9324/queue/media_events_queue --region us-east-1",
    "sqs:receive:process": "aws --endpoint-url=http://localhost:9324 sqs receive-message --queue-url http://localhost:9324/queue/media_process_queue --region us-east-1",
    "sqs:receive:results": "aws --endpoint-url=http://localhost:9324 sqs receive-message --queue-url http://localhost:9324/queue/media_result_queue --region us-east-1",
    
    "test:media-event": "aws --endpoint-url=http://localhost:9324 sqs send-message --queue-url http://localhost:9324/queue/media_events_queue --message-body file://scripts/test-messages/media-event.json --region us-east-1",
    "test:media-result": "aws --endpoint-url=http://localhost:9324 sqs send-message --queue-url http://localhost:9324/queue/media_result_queue --message-body file://scripts/test-messages/media-result.json --region us-east-1"
    
  },
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.839.0",
    "@aws-sdk/client-sqs": "^3.840.0",
    "@aws-sdk/lib-dynamodb": "^3.839.0",
    "@nestjs/common": "^10.4.6",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.4.6",
    "@nestjs/cqrs": "^10.2.7",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.4.2",
    "@types/logger": "^0.0.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "db-migrate": "^0.11.14",
    "db-migrate-pg": "^1.5.2",
    "mercadopago": "^2.2.0",
    "mo": "^1.7.3",
    "nestjs-pino": "^4.1.0",
    "pg": "^8.13.0",
    "pino": "^9.4.0",
    "pino-pretty": "^11.2.2",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.4.4",
    "@types/aws-sdk": "^0.0.42",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.17.23",
    "@types/sinon": "^17.0.3",
    "@types/supertest": "^6.0.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.42.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "jest-mock-extended": "^4.0.0-beta1",
    "mockdate": "^3.0.5",
    "prettier": "^3.0.0",
    "sinon": "^19.0.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/__test__/**/*.ts",
      "!src/*.ts",
      "!src/**/*.module.ts",
      "!src/common/**/*.ts",
      "!src/configuration/**/*.ts"
    ],
    "coverageDirectory": "coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@app/(.*)": "<rootDir>/src/$1",
      "@common/(.*)": "<rootDir>/src/common/$1",
      "@video-processing/(.*)": "<rootDir>/src/video-processing/$1"
    }
  }
}
